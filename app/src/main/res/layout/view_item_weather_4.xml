<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/list_item_2_background">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7sp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:textColor="#222222"
        android:textSize="16sp"
        android:maxLines="1"
        android:fontFamily="@font/noto_sans_kr_bold_hestia"
        android:visibility="gone"
        tool:text="1"
        tool:visibility="visible" />

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/tv_header"
        android:layout_centerInParent="true"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/noto_sans_kr_regular_hestia"
        android:gravity="center"
        android:textColor="#009dff"
        android:lineSpacingExtra="7sp"
        android:textSize="13sp"
        android:visibility="gone"
        tool:text="2"
        tool:visibility="visible" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tool:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_min"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:textColor="#222222"
            android:textSize="17sp"
            android:visibility="gone"
            tool:text="10"
            tool:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/tv_max"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginStart="6dp"
            android:gravity="center"
            android:textColor="#222222"
            android:textSize="17sp"
            android:visibility="gone"
            tool:text="10"
            tool:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
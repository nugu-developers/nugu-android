<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="45" />
                    <corners android:radius="@dimen/nugu_rounded_button_shape_border_radius" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/nugu_rounded_button_dark_shape_background" />
                    <corners android:radius="@dimen/nugu_rounded_button_shape_border_radius" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="45" />
                    <corners android:radius="@dimen/nugu_rounded_button_shape_border_radius" />
                    <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/nugu_rounded_button_dark_shape_background" />
                    <corners android:radius="@dimen/nugu_rounded_button_shape_border_radius" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/nugu_chips_pressed_dark" />
                    <corners android:radius="@dimen/nugu_rounded_button_shape_border_radius" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
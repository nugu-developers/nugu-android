<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_music_bar_player" />

    <FrameLayout
        android:id="@+id/view_music_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:paddingBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="119dp"
            android:orientation="vertical">

            <include layout="@layout/title_view" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="12dp">

                    <FrameLayout
                        android:id="@+id/album_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/album_cover_bg">

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/image_border"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_badgeImage"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="11dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_badgeMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/album_badge_bg"
                            android:fontFamily="@font/noto_sans_kr_regular_hestia"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_favorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/image_favorite"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:gravity="center"
                        android:fontFamily="@font/noto_sans_kr_bold_hestia"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_body"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/noto_sans_kr_regular_hestia"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="#444444"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_footer"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:fontFamily="@font/noto_sans_kr_regular_hestia"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tool:visibility="visible" />

                    <com.skt.nugu.sdk.platform.android.ux.template.view.media.LyricsView
                        android:id="@+id/cv_small_lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        app:sizes="small" />

                    <TextView
                        android:id="@+id/tv_show_lyrics"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="전체 가사보기"
                        android:textColor="#009dff"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <com.skt.nugu.sdk.platform.android.ux.template.view.media.LyricsView
                    android:id="@+id/cv_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f8f8f8"
                    android:visibility="gone" />

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/sb_progress"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#1A222222"
                android:enabled="false"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:max="100"
                android:progressTint="#009dff"
                android:thumb="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_playtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_fulltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_repeat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/btn_repeat_inactive"
                    android:visibility="invisible" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btn_prev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/btn_skip_previous_48" />

                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/btn_play_48" />

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/btn_skip_next_48" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_shuffle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/image_shuffle"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
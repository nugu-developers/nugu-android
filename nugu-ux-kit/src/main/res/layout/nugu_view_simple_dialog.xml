<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nugu_playlist_dialog_outside_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/nugu_simple_dialog_bg"
        android:paddingHorizontal="12dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/nugu_simple_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/nugu_playlist_dialog_text"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nugu_simple_dialog_btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/nugu_simple_dialog_btn_negative_bg"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:textColor="@color/nugu_playlist_dialog_negative_btn_text"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nugu_simple_dialog_btn_positive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nugu_simple_dialog_title" />

        <TextView
            android:id="@id/nugu_simple_dialog_btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/nugu_simple_dialog_btn_positive_bg"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:textColor="@color/nugu_playlist_dialog_positive_btn_text"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/nugu_simple_dialog_btn_negative"
            app:layout_constraintTop_toBottomOf="@id/nugu_simple_dialog_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>